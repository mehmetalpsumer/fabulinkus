<AutoCompleteButton@Button>:
    font_size:30
    markup: True

    
<AlphabetButtons@Button>:
    font_size:120
    markup: True

<OptionsButtons@Button>:
    font_size:60
    markup: True
<AlphabetAutoCompleteContainer>
	orientation:'vertical'
	size_hint: 1.3,1

<RootWidget>:
    alphabet_container:alphabetwidget
    autocomplete_container:autocompleteword
    sentence_container:label_sentence
    options_container:optionswidget
	orientation:'horizontal'
	LabelSentence:
        id:label_sentence
        OptionsWidget:
            id:optionswidget
    AlphabetAutoCompleteContainer:
        AutoCompleteWord:
            id:autocompleteword
        AlphabetWidget:
            id:alphabetwidget
            

<LabelSentence>:
	orientation:'vertical'
	size_hint: 0.5,1
    label_sentence:label_sentence_inside
	Label:
		text:""
		id:label_sentence_inside
		size_hint_y: None
		text_size: self.width, None
		height: self.texture_size[1]
		font_size:50
		canvas.before:
			Color:
				rgb: .6, .6, .6
			Rectangle:
				pos: self.pos
				size: self.size



